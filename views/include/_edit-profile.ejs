<body>
    <div class="logBox">
        <form action="/update-profile" method="post" class="logcar">
            <div class="ttl">Edit Details</div>
            <% if (errorMessage) { %>
                <div class="error-message"><%= errorMessage %></div>
              <% } %>
            
            <div class="logKit">
                <label for="first name" class="fname" id="errorTXt">First name</label>
                <input type="text" id="name-input" name="firstName" class="fnamei" placeholder="First name" value="<%= user.FirstName %>">
            </div>
            <div class="logKit">
                <label for="last name" class="fname" id="errorTXt2">Last name</label>
                <input type="text" id="lName-input" name="lastName" class="fnamei" placeholder="Last name" value="<%= user.LastName %>">
            </div>
            <div class="logKit">
                <label for="Email " id="EmailLabel" class="fname">Email address</label>
                <input type="email" id="Email-input" name="email" class="fnamei" placeholder="Email address" value="<%= user.Email %>">
            </div>
            <div class="logKit">
                <label for="Email " id="EmailLabel1" class="fname">Current Password</label>
                <div class="inputDiv">
                    <input name="oldPassword" type="password" id="password-input2" class="fnamei fbar" placeholder="Your password">
                    <button id="toggle-button" class="eyebtn" type="button" onclick="toggleit2()"><i id="eye-icon2" class="fa fa-eye"></i></button>
                </div>
            </div>
            <div class="logKit">
                <label for="Email " id="EmailLabel" class="fname">New Password Or repeat old</label>
                <div class="inputDiv">
                    <input name="newPassword" type="password" id="password-input" class="fnamei fbar" placeholder="New password">
                    <button id="toggle-button" class="eyebtn" type="button" onclick="toggleit()"><i id="eye-icon" class="fa fa-eye"></i></button>
                </div>
            </div>
            <div class="logKit arrangement">
                <div class="gender">Gender</div>
                <label>
                    <input type="radio" name="gender" value="Male" class="lemon" <% if (user && user.Gender === 'Male') { %>checked<% } %>> Male
                </label>
                <label>
                    <input type="radio" name="gender" value="Female" class="lemon" <% if (user && user.Gender === 'Female') { %>checked<% } %>> Female
                </label>
            </div>
            <div class="checkBox" id="disBox">
                <div class="ctext">Your password  must contain:</div>
                <div class="checkDot">
                    <div class="dot"><i id="dot1" class="fan fa fa-x"></i></div>
                    <div class="dotTExt" id="carac">A minimum of 8 characters</div>
                </div>
                <div class="checkDot">
                    <div class="dot"><i id="dot2" class="fan fa fa-dot-circle"></i></div>
                    <div class="dotTExt" id="carac2">One upper  case letter</div>
                </div>
                <div class="checkDot">
                    <div class="dot"><i id="dot3" class="fan fa fa-dot-circle"></i></div>
                    <div class="dotTExt" id="carac3">one lower case letter</div>
                </div>
                <div class="checkDot">
                    <div class="dot"><i id="dot4" class="fan fa fa-dot-circle"></i></div>
                    <div class="dotTExt" id="carac4">One number</div>
                </div>
            </div>
            <div class="btnBox" id="appBox">
                <button type="submit" class="sigClick clbardt">Save</button>
            </div>
            
            
        </form>
    </div>
</body>
