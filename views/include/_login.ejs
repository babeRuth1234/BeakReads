<body>
    <div class="logBox2">
        <form action="/login" method="post" class="logcar2">
            <div class="ttl ttl2">Sign In</div>
            <% if (typeof errorMessage !== 'undefined') { %>
                <div class="error-message"><%= errorMessage %></div>
              <% } %>
            <div class="logKit">
                <label for="Email " id="" class="fname" >Email address</label>
                <input type="email" id="Email-input" name="Email" class="fnamei" placeholder="Email address">
            </div>
            <div class="logKit">
                <label for="password"  class="fname">Password</label>
                <div class="inputDiv">
                    <input name="PassWord" type="password" id="password-input" class="fnamei fbar" placeholder="Your password">
                    <button id="toggle-button" class="eyebtn" type="button" onclick="toggleit()"><i id="eye-icon" class="fa fa-eye"></i></button>
                </div>
            </div>
            <a class="forgot-password" href="/NewPassword">Forgot your password?</a>
            <div class="btnBox2" id="">
                <button type="submit" class="sigClick">LOG IN</button>
            </div>
            <div class="altLink"><p class="Already">Dont have an account?</p><a class="linka" href="/register">Sign Up</a></div>

        </form>
    </div>
</body>

</html>